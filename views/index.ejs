<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <title>your todo list</title>
  </head>
  <body>
    <div class="container-general">
    <div class="container-main">
        <h1>TO DO LIST</h1>
        <div class="separating-line"></div>
        <% if (locals.errArr) { %>
          <div class="modalWindowErrors">
            <div class="modalWindowContent">
              <span class="close">&times;</span>
              <% errArr.forEach((err) => { %>
                <p><%= err.msg %></p>
              <% }) %>
            </div>
          </div>
        <% } %>
        <form action="/todos" method="POST" id="form-post">
            <input type="text" id="title" name="title" placeholder="title" />
            <textarea name="description" id="description" placeholder="description"></textarea>            
            <button type="submit">ADD</button>
            <!--<button><svg class="error" xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#9B6BFF"><path d="M480-280q17 0 28.5-11.5T520-320q0-17-11.5-28.5T480-360q-17 0-28.5 11.5T440-320q0 17 11.5 28.5T480-280Zm-40-160h80v-240h-80v240Zm40 360q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z"/></svg></button>-->  
        </form>
      </div>
    <% todos.forEach((todo) => { %>
    <div class="todo-card-preview">
      <div class="wrapper-todo-card-preview">
        <div class="card-contents">
        <div class="wrapper-input">
          <input type = "text" placeholder="title of the task" />
        </div>
        <div class="wrapper-controls">
          <label class="container-checkbox">
          <input class="completed" type="checkbox" />
          <span class="checkmark"></span>
          </label>
          <button name="update">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#777676"><path d="M160-160v-80h110l-16-14q-52-46-73-105t-21-119q0-111 66.5-197.5T400-790v84q-72 26-116 88.5T240-478q0 45 17 87.5t53 78.5l10 10v-98h80v240H160Zm400-10v-84q72-26 116-88.5T720-482q0-45-17-87.5T650-648l-10-10v98h-80v-240h240v80H690l16 14q49 49 71.5 106.5T800-482q0 111-66.5 197.5T560-170Z"/></svg>
          </button>
          <button name="delete">
            <!-- picture with the paper basket -->
          </button>
          <button name="changeView">
            <!-- picture with arrows pointed to different corners -->
          </button>
        </div>
        </div>
      </div>
    </div>
    <div class="todo-card">
      <div class="card-heading">
      <h2>YOUR TO DO</h2>
      <div class="separating-line"></div>
      </div>
      <div class="card-main">
      <form action="/todos/update/<%= todo._id %>?_method=PUT" method="POST">
        <input type="text" value="<%= todo.title %>" name="saved-todo" id="saved-todo" />
        <textarea name="saved-description" id="saved-description"><%= todo.description %></textarea>
        <div class="card-controls">
        <label class="container-checkbox">
        
        <input type="checkbox" name="completed" class="completed" <%= todo.completed ? 'checked' : '' %> />
        <span class="checkmark"></span>
        </label>
        <button class="update" type="submit">UPDATE</button>
      </form>  

     <form action="/todos/delete/<%= todo._id %>?_method=DELETE" method="POST">
        <button class="delete">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#9B6BFF"><path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/></svg>
        </button>
     </form>
     </div>
      </div>
    </div>
    <% }) %>
    <button class="btn-informed">?</button>
    </div>
    <script src="/index.js"></script>
  </body>
</html>
